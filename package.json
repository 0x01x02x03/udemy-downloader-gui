{
  "name": "Udeler",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FaisalUmair/udemy-downloader-gui.git"
  },
  "description": "A cross platform (Windows, Mac, Linux) desktop application for downloading Udemy Courses (Built with Electron).",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder -wml",
    "build-mac": "electron-builder -m",
    "build-win": "electron-builder -w",
    "build-linux": "electron-builder -l"
  },
  "build": {
    "directories": {
      "buildResources": "assets/images/build"
    },
    "linux": {
      "category": "Utility"
    }
  },
  "author": {
    "name": "Faisal Umair",
    "email": "eff.umair@gmail.com",
    "url": "https://github.com/FaisalUmair"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-builder": "^19.46.3",
    "electron-download-tf": "^4.3.4"
  },
  "dependencies": {
    "dialogs": "^1.1.20",
    "jquery": "^3.2.1",
    "mkdirp": "^0.5.1",
    "needle": "^2.0.1",
    "request": "^2.83.0",
    "request-progress": "^3.0.0",
    "sanitize-filename": "^1.6.1"
  }
}
